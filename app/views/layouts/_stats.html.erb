<% @user ||= current_user %>
<div class="stats">
  <%= link_to following_user_path(@user) do %>
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <small class="text-muted">
      フォロー
    </small>
  <% end %>
  <%= link_to followers_user_path(@user) do %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <small class="text-muted">
      フォロワー
    </small>
  <% end %>
</div>