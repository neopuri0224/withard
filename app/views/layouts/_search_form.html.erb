<%= form_tag users_search_path, :method => 'get' do %>
  <div class="input-group mb-3">
    <%= text_field_tag :search, params[:search], :placeholder => "ユーザー名で検索",class: 'form-control','area-describedby': "button-addon2" %>
    <div class="input-group-append">
      <%= submit_tag "検索", :name => nil, id: "button-addon2",class: 'btn btn-secondary mt-0' %>
    </div>
  </div>
<% end %>