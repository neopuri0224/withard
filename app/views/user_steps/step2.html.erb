<div class="container">
  <div class="row justify-content-center align-items-center step-field">
    <div class="col-4">
      <h2>
        <strong>
          あなたのことを<br>
          教えてください。
        </strong>
      </h2>
      <br>
      <%= form_for @user, url: wizard_path do |f| %>
        <div class="form-group">
          <%= f.label :name,"お名前は？" %>
          <%= f.text_field :name,required: true,class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image,"あなたとわかる画像を見せてください。" %><br>
          <%= f.file_field :profile_image, id: 'profile_image',class: 'form-control' %>
          <img id="profile_image_prev" src="#" class='hidden'>
          <% if @user.profile_image.attached? %>
            <div class="custom-file">
              <%= image_tag @user.profile_image, class: 'profile_present_image' %>
            </div>
          <% end %>
        </div>
        <div class="actions">
          <%= f.submit "次へ>>",class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 30%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100">
          step1
        </div>
      </div>
    </div>
  </div>
</div>