<%= form_with model: @user, url: wizard_path do |f| %>
  <h2>あなたのことを教えてください。</h2>
  <div class="field">
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :profile_image,"あなたとわかる画像を見せてください。" %><br>
    <%= f.file_field :profile_image, id: 'profile_image' %>
　　<img id="profile_image_prev" src="#" class='hidden'>
    <% if @user.profile_image.attached? %>
      <div class="custom-file">
        <%= image_tag profile_image, class: 'profile_present_image' %>
    <% end %>
  </div>
  <div class="actions">
        <%= f.submit "次へ" %>
  </div>
  <div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100">step1</div>
  </div>
<% end %>